    <title>Lit Review: Classics</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            -webkit-tap-highlight-color: transparent;
        }

        html { scroll-behavior: smooth; }

        .no-scrollbar::-webkit-scrollbar { display: none; }
        .no-scrollbar { -ms-overflow-style: none; scrollbar-width: none; }

        .custom-input:focus {
            outline: none;
            border-bottom-color: #0ea5e9;
            background-color: #f0f9ff;
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .card-anim { animation: slideIn 0.4s ease-out forwards; }
    </style>
</head>
<body class="text-slate-800">

    <header class="bg-slate-900 text-white p-4 shadow-lg sticky top-0 z-10">
        <div class="max-w-2xl mx-auto flex justify-between items-center">
            <div>
                <h1 class="text-lg font-bold text-sky-400">Literature Review</h1>
                <p class="text-xs text-slate-400">Major Authors & Works</p>
            </div>
            <button onclick="initGame()" class="text-xs bg-sky-600 hover:bg-sky-500 px-3 py-1.5 rounded transition font-medium">
                <i class="fas fa-sync-alt mr-1"></i> New Test
            </button>
        </div>
    </header>

    <div class="sticky top-[72px] z-20 bg-white/95 backdrop-blur-sm border-b border-slate-200 shadow-sm py-3 px-4 transition-all duration-300">
        <div class="max-w-2xl mx-auto">
            <div class="text-xs font-semibold text-slate-500 mb-2 uppercase tracking-wide flex justify-between">
                <span>Word Bank</span>
                <span id="wordCount" class="text-sky-600">Loading...</span>
            </div>
            <div id="wordBank" class="flex flex-wrap gap-2 max-h-32 overflow-y-auto no-scrollbar">
                </div>
        </div>
    </div>

    <main class="max-w-2xl mx-auto p-4 pb-28" id="quizContainer">
        </main>

    <div class="fixed bottom-0 left-0 w-full bg-white border-t border-slate-200 p-4 shadow-[0_-4px_6px_-1px_rgba(0,0,0,0.1)] z-30">
        <div class="max-w-2xl mx-auto flex gap-3">
            <button onclick="resetAnswers()" class="flex-1 bg-slate-100 text-slate-700 font-semibold py-3 rounded-lg active:scale-95 transition hover:bg-slate-200">
                Reset
            </button>
            <button onclick="submitQuiz()" class="flex-1 bg-sky-600 text-white font-bold py-3 rounded-lg shadow-lg active:scale-95 transition hover:bg-sky-700">
                Submit
            </button>
        </div>
    </div>

    <div id="resultModal" class="fixed inset-0 bg-slate-900/80 z-50 hidden flex items-center justify-center p-4 backdrop-blur-sm opacity-0 transition-opacity duration-300">
        <div class="bg-white rounded-2xl shadow-2xl p-6 max-w-sm w-full text-center transform scale-90 transition-transform duration-300" id="modalContent">
            <div id="scoreIcon" class="text-5xl mb-4 text-sky-500">
                <i class="fas fa-trophy"></i>
            </div>
            <h2 class="text-2xl font-bold text-slate-800 mb-1">Result</h2>
            <p id="scoreText" class="text-4xl font-black text-sky-600 my-4">0%</p>
            <p id="scoreDetail" class="text-slate-500 mb-6">Score details here.</p>
            
            <div class="flex gap-2">
                <button onclick="closeModal()" class="flex-1 bg-slate-100 text-slate-700 py-2 rounded-lg font-medium hover:bg-slate-200">Review</button>
                <button onclick="initGame(); closeModal()" class="flex-1 bg-sky-600 text-white py-2 rounded-lg font-medium hover:bg-sky-700">New Test</button>
            </div>
        </div>
    </div>

    <script>
        // --- 1. DATA SOURCE (UPDATED) ---
        const questionsDB = [
            // BEOWULF (Old English)
            { topic: "BEOWULF", q: "Beowulf is an epic poem written in ___ English.", a: "Old" },
            { topic: "BEOWULF", q: "The author of Beowulf is ___.", a: "unknown" },
            { topic: "BEOWULF", q: "Beowulf defeats the monster ___ to save Heorot hall.", a: "Grendel" },
            { topic: "BEOWULF", q: "The poem is set in Scandinavia, involving the Geats and the ___.", a: "Danes" },

            // THREE YOUNG MEN (The Pardoner's Tale - Geoffrey Chaucer)
            { topic: "THE PARDONER'S TALE", q: "This story is found in 'The Canterbury Tales' by Geoffrey ___.", a: "Chaucer" },
            { topic: "THE PARDONER'S TALE", q: "The three young men find a pile of ___ under a tree.", a: "gold" },
            { topic: "THE PARDONER'S TALE", q: "They end up killing each other due to their ___.", a: "greed" },
            { topic: "THE PARDONER'S TALE", q: "Chaucer is a key figure of the ___ English period.", a: "Middle" },

            // HAMLET (Renaissance)
            { topic: "HAMLET", q: "Hamlet is a tragedy written by William ___.", a: "Shakespeare" },
            { topic: "HAMLET", q: "The play is set in the Kingdom of ___.", a: "Denmark" },
            { topic: "HAMLET", q: "Prince Hamlet seeks revenge for the murder of his ___.", a: "father" },
            { topic: "HAMLET", q: "Shakespeare wrote during the ___ (or Elizabethan) period.", a: "Renaissance" },

            // ROBINSON CRUSOE (Enlightenment/Rise of Novel)
            { topic: "ROBINSON CRUSOE", q: "Robinson Crusoe was written by Daniel ___.", a: "Defoe" },
            { topic: "ROBINSON CRUSOE", q: "Crusoe names the native man he rescues ___.", a: "Friday" },
            { topic: "ROBINSON CRUSOE", q: "This work is often cited as one of the first realistic ___ in English.", a: "novels" },
            { topic: "ROBINSON CRUSOE", q: "Defoe wrote during the ___ period (Age of Reason).", a: "Enlightenment" },

            // GULLIVER'S TRAVELS (Enlightenment/Satire)
            { topic: "GULLIVER'S TRAVELS", q: "Gulliver's Travels is a famous satire by Jonathan ___.", a: "Swift" },
            { topic: "GULLIVER'S TRAVELS", q: "In Lilliput, the inhabitants are extremely ___.", a: "small" },
            { topic: "GULLIVER'S TRAVELS", q: "The Yahoos represent the savage side of ___ nature.", a: "human" },
            { topic: "GULLIVER'S TRAVELS", q: "Swift uses this book to mock travel narratives and ___.", a: "politics" },

            // THE SOLITARY REAPER (Romanticism)
            { topic: "SOLITARY REAPER", q: "The Solitary Reaper is a poem by William ___.", a: "Wordsworth" },
            { topic: "SOLITARY REAPER", q: "The poet sees a Highland girl reaping and ___ alone.", a: "singing" },
            { topic: "SOLITARY REAPER", q: "Wordsworth is a major poet of the ___ period.", a: "Romantic" },
            { topic: "SOLITARY REAPER", q: "The poem emphasizes emotion and the beauty of ___.", a: "nature" },

            // OLIVER TWIST (Victorian)
            { topic: "OLIVER TWIST", q: "Oliver Twist was written by Charles ___.", a: "Dickens" },
            { topic: "OLIVER TWIST", q: "Oliver famously asks for more food in the ___.", a: "workhouse" },
            { topic: "OLIVER TWIST", q: "The villainous Fagin leads a gang of child ___.", a: "thieves" },
            { topic: "OLIVER TWIST", q: "Dickens wrote during the ___ era.", a: "Victorian" },

            // LORD OF THE FLIES (Modern)
            { topic: "LORD OF THE FLIES", q: "Lord of the Flies was written by William ___.", a: "Golding" },
            { topic: "LORD OF THE FLIES", q: "The conch shell symbolizes law and ___.", a: "order" },
            { topic: "LORD OF THE FLIES", q: "Piggy's ___ are used to start the fire.", a: "glasses" },
            { topic: "LORD OF THE FLIES", q: "The novel explores the inherent ___ in human nature.", a: "evil" }
        ];

        // Custom distractors relevant to literature but incorrect for these specific questions
        const distractors = ["Austen", "sonnet", "American", "whale", "modernism", "ghost", "Milton", "comedy", "London", "ship"];

        // --- 2. LOGIC (No changes needed below, but kept for full functionality) ---
        let currentQuestions = [];
        let currentWordBank = [];

        function shuffleArray(array) {
            for (let i = array.length - 1; i > 0; i--) {
                const j = Math.floor(Math.random() * (i + 1));
                [array[i], array[j]] = [array[j], array[i]];
            }
            return array;
        }

        function initGame() {
            document.getElementById('quizContainer').innerHTML = '';
            document.getElementById('wordBank').innerHTML = '';
            window.scrollTo(0, 0);

            // Select random questions (e.g., 20)
            const shuffledDB = shuffleArray([...questionsDB]);
            currentQuestions = shuffledDB.slice(0, 20);

            // Build Word Bank
            const answers = currentQuestions.map(q => q.a);
            const randomDistractors = shuffleArray([...distractors]).slice(0, 5);
            currentWordBank = shuffleArray([...answers, ...randomDistractors]);

            renderWordBank();
            renderQuestions();
        }

        function renderWordBank() {
            const bankContainer = document.getElementById('wordBank');
            document.getElementById('wordCount').innerText = `${currentWordBank.length} Options`;
            
            currentWordBank.forEach(word => {
                const badge = document.createElement('button');
                badge.className = "px-3 py-1.5 bg-slate-100 border border-slate-300 rounded-md text-sm font-semibold text-slate-600 hover:bg-white hover:border-sky-300 hover:text-sky-600 transition select-none cursor-pointer active:scale-95 shadow-sm";
                badge.innerText = word;
                badge.onclick = function() {
                    this.classList.toggle('opacity-30');
                    this.classList.toggle('line-through');
                    this.classList.toggle('bg-slate-200');
                    this.classList.toggle('grayscale');
                };
                bankContainer.appendChild(badge);
            });
        }

        function renderQuestions() {
            const container = document.getElementById('quizContainer');
            
            currentQuestions.forEach((item, index) => {
                const parts = item.q.split('___');
                const card = document.createElement('div');
                card.className = "bg-white p-5 rounded-xl shadow-[0_2px_8px_-2px_rgba(0,0,0,0.05)] border border-slate-100 mb-4 card-anim relative";
                card.style.animationDelay = `${index * 0.05}s`;

                // Set color based on Topic roughly
                let tagColor = "bg-slate-100 text-slate-600";
                if(item.topic.includes("BEOWULF")) tagColor = "bg-amber-100 text-amber-800";
                if(item.topic.includes("HAMLET")) tagColor = "bg-purple-100 text-purple-800";
                if(item.topic.includes("LORD")) tagColor = "bg-red-100 text-red-800";
                if(item.topic.includes("REAPER")) tagColor = "bg-emerald-100 text-emerald-800";

                card.innerHTML = `
                    <div class="flex items-center justify-between mb-3">
                        <span class="text-[10px] font-bold tracking-wider px-2 py-1 rounded uppercase ${tagColor}">
                            ${item.topic}
                        </span>
                        <span class="text-xs text-slate-300 font-mono">#${index + 1}</span>
                    </div>
                    
                    <div class="text-base leading-loose text-slate-700 font-medium">
                        ${parts[0]}
                        <input type="text" 
                            data-index="${index}" 
                            class="custom-input border-b-2 border-slate-300 text-center font-bold text-sky-700 px-1 py-0 w-32 mx-1 rounded-t-sm bg-slate-50 transition-all"
                            autocomplete="off"
                        >
                        ${parts[1] || ''}
                    </div>
                    
                    <div id="feedback-${index}" class="hidden mt-3 text-sm flex items-center gap-2 p-3 rounded-lg bg-rose-50 text-rose-700 border border-rose-100 animate-pulse">
                        <i class="fas fa-times-circle"></i>
                        <span>Correct: <strong class="uppercase tracking-wide">${item.a}</strong></span>
                    </div>
                `;
                container.appendChild(card);
            });
        }

        function submitQuiz() {
            let score = 0;
            const inputs = document.querySelectorAll('input[type="text"]');
            
            inputs.forEach(input => {
                const index = input.getAttribute('data-index');
                const userAnswer = input.value.trim().toLowerCase();
                const correctAnswer = currentQuestions[index].a.toLowerCase();
                const feedbackDiv = document.getElementById(`feedback-${index}`);

                input.classList.remove('border-slate-300', 'border-emerald-500', 'border-rose-500', 'text-emerald-600', 'text-rose-600', 'bg-emerald-50', 'bg-rose-50');
                
                if (userAnswer === correctAnswer) {
                    score++;
                    input.classList.add('border-emerald-500', 'text-emerald-600', 'bg-emerald-50');
                    feedbackDiv.classList.add('hidden');
                } else {
                    input.classList.add('border-rose-500', 'text-rose-600', 'bg-rose-50');
                    feedbackDiv.classList.remove('hidden');
                }
            });

            showResult(score);
        }

        function resetAnswers() {
            const inputs = document.querySelectorAll('input[type="text"]');
            inputs.forEach(input => {
                input.value = '';
                input.className = "custom-input border-b-2 border-slate-300 text-center font-bold text-sky-700 px-1 py-0 w-32 mx-1 rounded-t-sm bg-slate-50 transition-all";
                const index = input.getAttribute('data-index');
                document.getElementById(`feedback-${index}`).classList.add('hidden');
            });
            
            const words = document.getElementById('wordBank').children;
            for(let word of words) {
                word.className = "px-3 py-1.5 bg-slate-100 border border-slate-300 rounded-md text-sm font-semibold text-slate-600 hover:bg-white hover:border-sky-300 hover:text-sky-600 transition select-none cursor-pointer active:scale-95 shadow-sm";
            }
            window.scrollTo(0, 0);
        }

        function showResult(score) {
            const modal = document.getElementById('resultModal');
            const content = document.getElementById('modalContent');
            const percentage = Math.round((score / 20) * 100);
            
            document.getElementById('scoreText').innerText = `${percentage}%`;
            document.getElementById('scoreDetail').innerText = `${score} / 20 Correct Answers`;
            
            const icon = document.getElementById('scoreIcon');
            if(percentage >= 80) {
                icon.innerHTML = '<i class="fas fa-crown text-yellow-400"></i>';
            } else if (percentage >= 50) {
                icon.innerHTML = '<i class="fas fa-star text-sky-500"></i>';
            } else {
                icon.innerHTML = '<i class="far fa-sad-tear text-slate-400"></i>';
            }

            modal.classList.remove('hidden');
            setTimeout(() => {
                modal.classList.remove('opacity-0');
                content.classList.remove('scale-90');
                content.classList.add('scale-100');
            }, 10);
        }

        function closeModal() {
            const modal = document.getElementById('resultModal');
            const content = document.getElementById('modalContent');
            modal.classList.add('opacity-0');
            content.classList.remove('scale-100');
            content.classList.add('scale-90');
            setTimeout(() => { modal.classList.add('hidden'); }, 300);
        }

        window.addEventListener('DOMContentLoaded', initGame);
    </script>
</body>
</html>
